<style lang="scss">
  .waving {
    float: left;
    padding-right: 8px;
    animation: waving 6s infinite;
  }

  @keyframes waving {
    45% {
      transform: rotate(0);
    }
    47% {
      transform: rotate(-30deg);
    }
    50% {
      transform: rotate(40deg);
    }
    52% {
      transform: rotate(-30deg);
    }
    54% {
      transform: rotate(40deg);
    }
    58% {
      transform: rotate(0);
    }
  }
</style>

