---
import type { EducationItem } from "src/models";

interface Props {
  educationItem: EducationItem;
}

const { educationItem } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1">
      <a href={educationItem.titulation.link}>{educationItem.titulation.name}</a
      >
      <br />
      <span class="font-light text-sm"
        >{educationItem.year}, <a href={educationItem.institution.link}
          >{educationItem.institution.name}</a
        ></span
      >
      <p class="my-2 text-justify">
        <slot />
      </p>
    </h3>
  </div>
</div>
